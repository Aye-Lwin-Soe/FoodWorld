<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/shadow_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/img"
            android:src="@drawable/bottom_shadow"/>

        <ProgressBar
            android:id="@+id/progress_load_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginRight="160dp"
            android:text="Goat"
            android:gravity="bottom"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_alignRight="@+id/img_favourite"
            android:layout_alignTop="@+id/img_favourite"
            android:layout_alignEnd="@+id/img_favourite"
            android:textSize="18sp"
            android:fontFamily="@font/notoserif_regular"
            />

        <ImageView
            android:id="@+id/img_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:src="@drawable/ic_favorite_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-50dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoserif_bold"
            android:textStyle="bold"
            android:textColor="@color/colorTextTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Mbuzi Choma (Roasted Goat)"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img" />

        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:text="Kenyan"
            android:fontFamily="@font/notoserif_italic"
            android:paddingBottom="7dp"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>